<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ebedeb">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        app:cardElevation="8dp"
        app:contentPadding="5dp"
        app:cardCornerRadius="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="ObjectID"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/adapter_device_objectid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1dD5dfp"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/adapter_device_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XL2411"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/adapter_device_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BENQ"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/adapter_device_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MONITOR"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:text="Dept."
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/adapter_device_department"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MANAGEMENT"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>