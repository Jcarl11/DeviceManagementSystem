<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity"
    android:fillViewport="true"
    android:background="@drawable/gradient_bg"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/aboutus_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logomin"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/aboutus_header"
            android:textSize="12sp"
            android:textStyle="bold"
            android:inputType="textMultiLine"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/aboutus_body"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/aboutus_body2"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Our Belief"
            android:textSize="12sp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/aboutus_ourbelief"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Our Mission"
            android:textSize="12sp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/aboutus_ourmission"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/aboutus_ourmission2"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Company Profile"
            android:textSize="12sp"
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/aboutus_companyprofile"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:text="@string/aboutus_companyprofile2"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/aboutus_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click here to learn more"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="40dp"
            android:textColor="@android:color/white"
            android:autoLink="web"
            android:textSize="10sp"/>
    </LinearLayout>


</ScrollView>